  <section class="container" >
    <h1 class="text-uppercase text-muted">Music Database</h1>
    <h2 class="text-uppercase text-muted">Add a Song</h2>
    <p class="status"></p>
    <div class="errors"></div>
    <%= form_for(@music) do |f| %>
    <div class="field">
      <%= f.label :title, class:"text-muted"%><br>
      <%= f.text_field :title, class:"form-control"  %>
    </div>
    <div class="field">
      <%= f.label :artist, class:"text-muted" %><br>
      <%= f.text_field :artist, class:"form-control" %>
    </div>
    <div class="field">
      <%= f.label :year, class:"text-muted" %><br>
      <%= f.text_field :year, class:"form-control" %>
    </div>
    <div class="field">
      <%= f.label :genre, class:"text-muted" %><br>
      <%= f.text_field :genre, class:"form-control" %>
    </div>
    <div class="actions">
      <%= f.submit class:"btn btn-primary"%>
    </div>
    <% end %>

    <h2 class="text-muted text-uppercase">List of Songs</h2>
    <table id="music_list" class="text-muted">
      <thead>
        <tr>
          <th>Title</th>
          <th>Artist</th>
          <th>Year</th>
          <th>Genre</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @musics.each do |music| %>
        <tr>
          <td><%= music.title %></td>
          <td><%= music.artist %></td>
          <td><%= music.year %></td>
          <td><%= music.genre %></td>
          <td><%= link_to 'x', music, method: :delete, class: 'music_delete' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <p class="no_music text-danger text-center bg-warning">No music yet... please, add some!</p>
  </section>